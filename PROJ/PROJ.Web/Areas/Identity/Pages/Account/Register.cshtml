@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Register</h4>
            <hr />
            <div asp-validation-summary="All" class="validation-error-message"></div>
            <div class="form-group">
                <label>Username</label>
                <input asp-for="Input.Username" class="form-control" autofocus="autofocus" />
                <span asp-validation-for="Input.Username" class="validation-error-message"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="validation-error-message"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </form>
    </div>
</div>